<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>JSForum - Developer Community</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          colors: {
            discord: {
              DEFAULT: '#5865F2',
              dark: '#4752C4',
            },
            dark: {
              900: '#0a0a0a',
              800: '#1a1a1a',
              700: '#2a2a2a',
              600: '#3a3a3a',
            },
            success: '#43b581',
          },
          animation: {
            'fade-in': 'fadeIn 0.3s ease-in-out',
          },
          keyframes: {
            fadeIn: {
              '0%': { opacity: '0', transform: 'translateY(10px)' },
              '100%': { opacity: '1', transform: 'translateY(0)' },
            }
          }
        }
      }
    }
  </script>
  <style type="text/tailwindcss">
    @layer utilities {
      .text-gradient {
        @apply bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-purple-600;
      }
      .bg-grid {
        background-image: radial-gradient(circle, rgba(255,255,255,0.05) 1px, transparent 1px);
        background-size: 20px 20px;
      }
    }
  </style>
</head>
<body class="bg-dark-900 text-gray-100 min-h-screen">
  <!-- Background elements -->
  <div class="fixed inset-0 bg-grid opacity-20 -z-10"></div>
  
  <!-- Navigation -->
  <nav class="border-b border-dark-700/50 backdrop-blur-md sticky top-0 z-50">
    <div class="container mx-auto px-6 py-3">
      <div class="flex items-center justify-between">
        <a href="/" class="text-2xl font-bold text-gradient">JSForum</a>
        
        <div class="flex items-center space-x-4">
          <a href="/account" class="px-4 py-2 rounded-md text-gray-300 hover:text-white hover:bg-dark-700 transition-colors">
            <i class="fas fa-user mr-2"></i> Account
          </a>
          <a href="/new" class="px-4 py-2 rounded-md bg-discord hover:bg-discord-dark text-white transition-colors">
            <i class="fas fa-plus mr-2"></i> New Post
          </a>
          <a href="/support" class="px-4 py-2 rounded-md text-gray-300 hover:text-white hover:bg-dark-700 transition-colors">
            <i class="fas fa-question-circle mr-2"></i> Support
          </a>
          
          <div class="ml-4 flex items-center space-x-3">
            <div class="text-right">
              <div class="text-sm font-medium text-white"><%= user.username %></div>
              <div class="text-xs text-gray-400">Online</div>
            </div>
            <img class="w-10 h-10 rounded-full border-2 border-discord" 
                 src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" 
                 alt="Profile picture">
          </div>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="container mx-auto px-6 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Top Posts Section -->
      <div class="lg:col-span-2">
        <div class="bg-dark-800/50 border border-dark-700 rounded-xl overflow-hidden backdrop-blur-sm animate-fade-in">
          <div class="border-b border-dark-700 px-6 py-4">
            <h2 class="text-xl font-bold flex items-center">
              <i class="fas fa-fire text-orange-400 mr-3"></i>
              <span class="text-gradient">Top Posts</span>
            </h2>
          </div>
          <div class="divide-y divide-dark-700">
            <% if (topPosts.length) { %>
              <% topPosts.forEach((post, index) => { %>
                <div class="px-6 py-4 hover:bg-dark-700/50 transition-colors">
                  <div class="flex items-start justify-between">
                    <div>
                      <div class="flex items-center mb-1">
                        <span class="text-xs font-bold bg-dark-600 text-gray-300 px-2 py-1 rounded mr-3">#<%= index + 1 %></span>
                        <h3 class="font-medium text-white"><%= post.title %></h3>
                      </div>
                      <div class="text-sm text-gray-400 ml-8">
                        by <span class="text-blue-400"><%= post.author_name %></span> • 
                        <span class="text-purple-400"><%= post.views %> views</span> • 
                        <span class="text-gray-500"><%= post.comment_count %> comments</span>
                      </div>
                    </div>
                    <a href="/posts/<%= post.id %>" 
                       class="px-3 py-1.5 rounded-md bg-success hover:bg-green-500 text-white text-sm font-medium transition-colors flex items-center">
                      <i class="fas fa-comment-dots mr-2"></i> Discuss
                    </a>
                  </div>
                </div>
              <% }); %>
            <% } else { %>
              <div class="px-6 py-8 text-center text-gray-500">
                <i class="fas fa-comment-slash text-3xl mb-3"></i>
                <p>No posts yet. Be the first to share!</p>
              </div>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Sidebar Sections -->
      <div class="space-y-8">
        <!-- Latest Discussions -->
        <div class="bg-dark-800/50 border border-dark-700 rounded-xl overflow-hidden backdrop-blur-sm animate-fade-in">
          <div class="border-b border-dark-700 px-6 py-4">
            <h2 class="text-xl font-bold flex items-center">
              <i class="fas fa-clock text-blue-400 mr-3"></i>
              <span>Latest Discussions</span>
            </h2>
          </div>
          <div class="divide-y divide-dark-700">
            <% if (latestPosts.length) { %>
              <% latestPosts.forEach(post => { %>
                <div class="px-6 py-4 hover:bg-dark-700/50 transition-colors">
                  <h3 class="font-medium text-white mb-1"><%= post.title %></h3>
                  <div class="text-sm text-gray-400">
                    by <span class="text-blue-400"><%= post.author_name %></span> • 
                    <span class="text-gray-500"><%= post.time_ago %></span>
                  </div>
                  <div class="mt-3 flex justify-end">
                    <a href="/posts/<%= post.id %>" 
                       class="px-3 py-1 rounded-md bg-dark-600 hover:bg-dark-500 text-white text-xs font-medium transition-colors">
                      View Discussion
                    </a>
                  </div>
                </div>
              <% }); %>
            <% } else { %>
              <div class="px-6 py-8 text-center text-gray-500">
                <i class="fas fa-comments text-3xl mb-3"></i>
                <p>No discussions yet</p>
              </div>
            <% } %>
          </div>
        </div>

        <!-- Trending Topics -->
        <div class="bg-dark-800/50 border border-dark-700 rounded-xl overflow-hidden backdrop-blur-sm animate-fade-in">
          <div class="border-b border-dark-700 px-6 py-4">
            <h2 class="text-xl font-bold flex items-center">
              <i class="fas fa-chart-line text-green-400 mr-3"></i>
              <span>Trending Topics</span>
            </h2>
          </div>
          <div class="divide-y divide-dark-700">
            <% if (trendingPosts.length) { %>
              <% trendingPosts.forEach(post => { %>
                <div class="px-6 py-4 hover:bg-dark-700/50 transition-colors">
                  <div class="flex items-center mb-1">
                    <span class="text-xs font-bold bg-dark-600 text-gray-300 px-2 py-0.5 rounded mr-3">
                      +<%= post.trend_score %>
                    </span>
                    <h3 class="font-medium text-white"><%= post.title %></h3>
                  </div>
                  <div class="text-sm text-gray-400 ml-8">
                    by <span class="text-blue-400"><%= post.author_name %></span>
                  </div>
                  <div class="mt-3 flex justify-end">
                    <a href="/posts/<%= post.id %>" 
                       class="px-3 py-1 rounded-md bg-dark-600 hover:bg-dark-500 text-white text-xs font-medium transition-colors">
                      Join Topic
                    </a>
                  </div>
                </div>
              <% }); %>
            <% } else { %>
              <div class="px-6 py-8 text-center text-gray-500">
                <i class="fas fa-tag text-3xl mb-3"></i>
                <p>No trending topics</p>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="border-t border-dark-800/50 py-6 mt-12">
    <div class="container mx-auto px-6">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-500 text-sm mb-4 md:mb-0">
          &copy; <span id="year"><%= new Date().getFullYear() %></span> JSForum. All rights reserved.
        </p>
        <div class="flex space-x-6">
          <a href="#" class="text-gray-500 hover:text-white transition-colors">
            <i class="fab fa-github"></i>
          </a>
          <a href="#" class="text-gray-500 hover:text-white transition-colors">
            <i class="fab fa-twitter"></i>
          </a>
          <a href="#" class="text-gray-500 hover:text-white transition-colors">
            <i class="fab fa-discord"></i>
          </a>
        </div>
      </div>
    </div>
  </footer>
</body>
</html>